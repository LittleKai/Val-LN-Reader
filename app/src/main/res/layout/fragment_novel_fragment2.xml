<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valvrare.littlekai.valvraretranslation.inner_fragment.NovelFragment2"
    android:id="@+id/llout_chapterlistfragment"
    android:background="#deffffff"
    >
    <ProgressBar
        android:id="@+id/progressBar_chapterlist"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:indeterminateTint="@color/colorPrimary"
        android:indeterminateTintMode="src_atop"
        android:scrollbarStyle="insideOverlay"
        />
<ListView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/lv_ChapterList"
    >
</ListView>


</RelativeLayout>
