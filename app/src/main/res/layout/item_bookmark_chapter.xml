<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llout_Bookmark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/color_sliding_state"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="88.5dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="6dp"
        >

        <TextView
            android:id="@+id/tv_novelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:text="Novel's Name"
            android:textColor="#298cda"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_FavChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Tên Chương:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_FavDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời Gian Lưu Chương:"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>
